    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Encoding: debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=remote-image-worker",
                    "--package=remote-image-worker"
                ],
                "filter": {
                    "name": "remote-image-worker",
                    "kind": "bin"
                }
            },
            "args": [
                "encode",
                "${workspaceFolder}/../image.webp",
                "${workspaceFolder}/../imb64.txt"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Decoding: debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=remote-image-worker",
                    "--package=remote-image-worker"
                ],
                "filter": {
                    "name": "remote-image-worker",
                    "kind": "bin"
                }
            },
            "args": [
                "decode",
                "${workspaceFolder}/../imb64.txt",
                "${workspaceFolder}/../image.webp"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'remote-image-worker'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=remote-image-worker",
                    "--package=remote-image-worker"
                ],
                "filter": {
                    "name": "remote-image-worker",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
